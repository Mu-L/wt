<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">
  <message id="Wt.Auth.field">
    <![CDATA[
    ${<if:{1}>}
    ${block:Wt.Auth.field.active {1}}
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.Auth.field.active">
    <![CDATA[
    ${block:Wt.Auth.field2.active '{1}' 'tr:Wt.Auth.{1}'}
    ]]>
  </message>

  <message id="Wt.Auth.field2">
    <![CDATA[
    ${<if:{1}>}
    ${block:Wt.Auth.field2.active {1} {2}}
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.Auth.field2.active">
    <![CDATA[
    ${block:Wt.Auth.field.specialized '{1}' '{2}' 'block:Wt.Auth.field.info {1}'}
    ]]>
  </message>

  <message id="Wt.Auth.field3">
    <![CDATA[
    ${<if:{1}>}
    ${block:Wt.Auth.field3.active {1} {2} {3}}
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.Auth.field3.active">
    <![CDATA[
    ${block:Wt.Auth.field.specialized {1} '{2}' 'block:Wt.Auth.field.info-link {1} {3}'}
    ]]>
  </message>

  <message id="Wt.Auth.field.specialized">
    <![CDATA[
    ${block:Wt.Auth.field.base '{1}' '{2}' '{3}' 'control-group' 'control-label' 'controls' 'help-block  Wt-auth-help'}
    ]]>
  </message>

  <message id="Wt.Auth.field.base">
    <![CDATA[
    <div class="{4}">
      <label for="${id:{1}}" class="{5}">
        ${{2}}
      </label>
      <div class="{6}">
        ${{1}} <span class="{7}">
          ${{3}}
        </span>
      </div>
    </div>
    ]]>
  </message>

  <message id="Wt.Auth.field.info">
    <![CDATA[
      ${{1}-info}
    ]]>
  </message>

  <message id="Wt.Auth.field.info-link">
    <![CDATA[
      ${block:Wt.Auth.field.info '{1}'}
      ${{2} class="btn-link"}
    ]]>
  </message>

  <message id="Wt.Auth.checkbox.field">
    <![CDATA[
    ${<if:{1}>}
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          ${tr:Wt.Auth.{1}} ${{1}} <br/>
          <span class="help-block Wt-auth-help">${{1}-info}</span>
        </label>
      </div>
    </div>
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.Auth.template.login">
    <div class="span8 offset2 Wt-auth-login">
      <legend>${tr:Wt.Auth.login-form-title}</legend>
      <p>${tr:Wt.Auth.login-form-info}</p>

      <div class="form-horizontal">
	${<if:passwords>}
	  ${block:Wt.Auth.field3 user-name user-name-label user-confirm-email}
	  ${block:Wt.Auth.field password}
	  ${block:Wt.Auth.checkbox.field remember-me}
	${</if:passwords>}

        ${<if:oauth>}
          <div class="control-group">
            <div class="controls">
              <p>Or login using:</p>
              ${icons}
            </div>
          </div>
        ${</if:oauth>}

        <div class="form-actions form-group">
          <div class="col-sm-offset-2 offset-sm-2 col-sm-10">
            <p>${login class="btn-primary"}</p>
            <p>${lost-password class="btn-link"} ${sep}
            ${register class="btn-link"}</p>
          </div>
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.registration">
    <div class="Wt-auth-registration">
      <p>${tr:Wt.Auth.registration-form-info}</p>

      <p class="lead">
        ${password-description}
      </p>

      <div class="form-horizontal">
        ${block:Wt.Auth.field3 user-name user-name-label confirm-is-you}
        ${block:Wt.Auth.field choose-password}
        ${block:Wt.Auth.field repeat-password}
        ${block:Wt.Auth.field email}

        ${<if:oauth>}
          <p class="lead">
            ${oauth-description}
          </p>
          <div class="control-group">
            <label class="control-label">${tr:Wt.Auth.oauth}</label>
            <div class="controls">
              ${icons}
            </div>
          </div>
        ${</if:oauth>}

        <div class="modal-footer"> <!-- assuming here we're in a dialog -->
          ${ok-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.update-password">
    <div class="Wt-auth-update-password">
      <div class="form-horizontal">
        ${block:Wt.Auth.field2 user-name user-name-label}
        ${block:Wt.Auth.field password}
        ${block:Wt.Auth.field choose-password}
        ${block:Wt.Auth.field repeat-password}

        <div class="modal-footer">
          ${ok-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.resend-email-verification">
    <p>${tr:Wt.Auth.resend-verification-msg}</p>
    <div class="Wt-form">
      <div class="form-horizontal">
        ${block:Wt.Auth.field.active email}

        <div class="modal-footer"> <!-- assuming here we're in a dialog -->
          ${send-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.lost-password">
    <div class="Wt-form Wt-auth-lost-password">
      <p>${tr:Wt.Auth.lost-password-form-info}</p>

      <div class="form-horizontal">
        ${block:Wt.Auth.field.active email}

        <div class="modal-footer"> <!-- assuming here we're in a dialog -->
          ${send-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.password-prompt">
    <div class="Wt-form Wt-auth-password-prompt">
      <div class="form-horizontal">
        ${block:Wt.Auth.field2 user-name user-name-label}
        ${block:Wt.Auth.field password}
      </div>

      <div class="Wt-buttons">
        ${ok-button} ${cancel-button}
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.logged-in">
    <div class="Wt-auth-logged-in">
      <b>${user-name}</b> ${logout}
    </div>
  </message>

  <message id="Wt.Auth.template.totp">
    <div class="span8 offset2 Wt-auth-login">
      <legend>${tr:Wt.Auth.totp-title}</legend>
      <p>${tr:Wt.Auth.totp-info}</p>

      <div class="form-horizontal">
        ${<if:no-secret-key>}
          ${qr-code}
          ${tr:Wt.Auth.totp-qr-code-explanation}
          <p> Secret key: ${secret-key}</p>
        ${</if:no-secret-key>}
        <div class="control-group ${label} row mb-3">
          <label for="${id:totp-code}" class="col-sm-2 control-label text-sm-end">
            ${tr:Wt.Auth.totp-code}
          </label>
          <div class="controls col-sm-8">
            ${totp-code}
            <span class="form-text help-block Wt-auth-help">
              <span>${totp-code-info}</span>
            </span>
          </div>
        </div>
        ${block:Wt.Auth.checkbox.field remember-me}

        <div class="form-actions offset-sm-2">
          <p>${login class="btn-primary"} ${logout class="btn-secondary"}</p>
        </div>
      </div>
    </div>
  </message>
</messages>
