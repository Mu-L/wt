<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">
  <message id="Wt.Auth.field.active">
    <![CDATA[
    <div class="form-group">
      <label for="${id:{1}}" class="control-label col-sm-2">
        ${tr:Wt.Auth.{1}}
      </label>
      <div class="col-sm-8">
        ${{1}}
        <span class="help-block">
          ${{1}-info}
        </span>
      </div>
    </div>
    ]]>
  </message>

  <message id="Wt.Auth.field2.active">
    <![CDATA[
    <div class="form-group">
      <label for="${id:{1}}" class="control-label col-sm-2">
        ${{2}}
      </label>
      <div class="col-sm-8">
        ${{1}}
        <span class="help-block">
          ${{1}-info}
        </span>
      </div>
    </div>
    ]]>
  </message>

  <message id="Wt.Auth.field3.active">
    <![CDATA[
    <div class="form-group">
      <label for="${id:{1}}" class="control-label col-sm-2">
        ${{2}}
      </label>
      <div class="col-sm-8">
        ${{1}}
        <span class="help-block">
          ${{1}-info} ${{3} class="btn-link"}
        </span>
      </div>
    </div>
    ]]>
  </message>

    <message id="Wt.Auth.checkbox.field">
    <![CDATA[
    ${<if:{1}>}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <div class="checkbox">
          <label>
            ${{1}} ${tr:Wt.Auth.{1}}
            <span class="help-block">${{1}-info}</span>
          </label>
        </div>
      </div>
    </div>
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.Auth.template.totp">
    <div class="span8 offset2 Wt-auth-login">
      <legend>${tr:Wt.Auth.totp-title}</legend>
      <p>${tr:Wt.Auth.totp-info}</p>

      <div class="form-horizontal">
        ${<if:no-secret-key>}
          ${qr-code}
          ${tr:Wt.Auth.totp-qr-code-explanation}
          <p> Secret key: ${secret-key}</p>
        ${</if:no-secret-key>}
        <div class="form-group ${label}">
          <label for="${id:totp-code}" class="control-label col-sm-2">
            ${tr:Wt.Auth.totp-code}
          </label>
          <div class="col-sm-8">
            ${totp-code}
            <span class="help-block">
              ${totp-code-info}
            </span>
          </div>
        </div>
        ${block:Wt.Auth.checkbox.field remember-me}

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <p>${login class="btn-primary"} ${logout class="btn-default"}</p>
          </div>
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.WNavigationBar.template">
    <div>
      ${collapse-button}
      <div class="navbar-header">
        ${expand-button}
        ${title-link}
      </div>
      ${contents}
    </div>
  </message>

</messages>
