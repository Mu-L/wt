<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">

  <message id="Wt.Auth.form-group">row mb-3</message>
  <message id="Wt.Auth.form-label">col-sm-2 col-form-label text-sm-end</message>
  <message id="Wt.Auth.form-element">col-sm-8</message>
  <message id="Wt.Auth.form-help">form-text</message>
  <message id="Wt.Auth.form-horizontal"></message> <!--No specific class needed-->

  <message id="Wt.Auth.form-action.class">offset-sm-2</message>

  <message id="Wt.Auth.field-check">
    <![CDATA[
    ${block:Wt.Auth.field {1}}
    ]]>
  </message>

  <message id="Wt.Auth.field.specialized">
    <![CDATA[
    ${block:Wt.Auth.field.base '{1}' '{2}' '{3}' 'row mb-3' 'col-sm-2 col-form-label text-sm-end" style="min-width: 100px;' 'col-sm-8' 'form-text'}
    ]]>
  </message>

  <message id="Wt.Auth.checkbox.field">
    <![CDATA[
    ${<if:{1}>}
    <div class="row mb-3">
      <div class="offset-sm-2 col-sm-8">
        <div class="form-check">
          ${{1}}
          <label for="${id:{1}}" class="form-check-label">
            ${tr:Wt.Auth.{1}}
          </label>
          <div class="form-text">
              ${{1}-info}
          </div>
        </div>
      </div>
    </div>
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.WNavigationBar.template">
    <div class="container-fluid">
      ${title-link}
      ${collapse-button}
      ${contents}
    </div>
  </message>

  <message id="Wt.WNavigationBar.expand-button">
    <span class="navbar-toggler-icon"></span>
  </message>

  <message id="Wt.WDialog.template">
    <div class="modal-dialog">
      ${layout}
    </div>
  </message>

  <message id="Wt.WDialog.titlebar">
    <h4 class="modal-title">${title}</h4>
  </message>
</messages>
